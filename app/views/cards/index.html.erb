cardvalues = ["2", "3", "4", "5", "6", "7", "8", "9", "10", "jack", "queen", "king", "ace"]
suits = ["hearts", "diamonds", "spades", "clubs"]

deck = []
for cardvalue in cardvalues
    for suit in suits
        deck<<"#{cardvalue}_of_#{suit}"
    end
end

shuffled_deck = deck.shuffle
hand = shuffled_deck[0,5]

%>


